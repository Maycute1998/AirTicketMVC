
@model IEnumerable<MvcEfCore.ViewModels.LichChuyenBayVM>
@{
    ViewData["Title"] = "Đặt vé";
}
<div class="hero-wrap js-fullheight">
    <div class="">
        <img src="~/images/bg_2.jpg" />
        <div class="container">

        </div>
    </div>

    <div class="container">
        <h2>Danh sách chuyến bay</h2>
        <table id="table" class="display table">
            <thead>
                <tr>
                    <th>
                        Mã chuyến bay
                    </th>
                    <th>
                        Ngày giờ bay
                    </th>
                    <th>
                        Giá vé
                    </th>
                    <th>
                        Thời gian bay
                    </th>
                    <th>
                        Ghế hạng 1 còn
                    </th>
                    <th>
                        Ghế hạng 2 còn
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ChuyenBayID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NgayGioBay)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.GiaVe) VND
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ThoiGianBay)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SoGheHang1)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SoGheHang2)
                        </td>
                        <td>


                            <a asp-action="Create" asp-route-id="@item.ChuyenBayID">Đặt vé</a> |
                            <a asp-action="Create2" asp-route-id="@item.ChuyenBayID">Đặt chỗ</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
   
</div>

    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.css">


    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.js"></script>
    <script>
        $(document).ready(function () {
            $('#table').DataTable();
        });
    </script>





